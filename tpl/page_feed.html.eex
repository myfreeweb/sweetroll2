<!DOCTYPE html>
<html lang="en">
	<%= head title: "#{doc_title(@feed)} / #{home(@preload).props["name"]}" %>
	<body class="h-feed">
		<%= header preload: @preload, cur_url: @feed.url, feed_urls: @feed_urls %>
		<main>
			<%= for entry <- @feed.children do %>
				<article>
					<%= entry preload: @preload, cur_url: @feed.url, entry: entry, feed_urls: @feed_urls, expand_comments: false %>
				</article>
			<% end %>
			<nav>
				<%= if @cur_page > 0 do %>
					<%= content_tag :a, href: Post.DynamicUrls.page_url(@feed.url, @cur_page - 1), rel: "prev" do %>
						← newer entries
					<% end %>
				<% end %>
				<%= if @cur_page < @page_count - 1 do %>
					<%= content_tag :a, href: Post.DynamicUrls.page_url(@feed.url, @cur_page + 1), rel: "next" do %>
						earlier entries →
					<% end %>
				<% end %>
			</nav>
		</main>
		<%= footer [] %>
	</body>
</html>
